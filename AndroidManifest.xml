<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.photoeditor"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission
        android:name="android.permission.LOCATION_HARDWARE"
        android:maxSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.photoeditor.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.photoeditor.ImageCapture"
            android:label="@string/title_activity_image_capture" >
        </activity>
        <activity
            android:name="com.example.photoeditor.EditMenuActivity"
            android:label="@string/title_activity_edit_menu" >
        </activity>
        <activity
            android:name="com.example.photoeditor.CropImageActivity"
            android:label="@string/title_activity_crop_image" >
        </activity>
        <activity
            android:name="com.example.photoeditor.BrightnessContrastSaturation"
            android:label="@string/title_activity_brightness_contrast_saturation" >
        </activity>
        <activity
            android:name="com.example.photoeditor.AddTextActivity"
            android:label="@string/title_activity_add_text" >
        </activity>
        <activity
            android:name="com.example.photoeditor.AboutAction"
            android:label="@string/title_activity_about_action" >
        </activity>
    </application>

</manifest>
